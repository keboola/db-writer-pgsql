{
    "name": "keboola/db-writer-pgsql",
    "license": "MIT",
    "type": "project",
    "description": "Keboola Postgre SQL DB Writer",
    "keywords": ["keboola", "postgre", "sql", "db", "writer"],
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-pdo": "*",
        "symfony/config": "^5.0",
        "keboola/db-writer-common": "^5.11"
    },
    "require-dev": {
        "keboola/coding-standard": "^9.0",
        "keboola/csv": "^3.1",
        "phpunit/phpunit": "^7.5",
        "phpstan/phpstan-shim": "^0.11.16",
        "ext-json": "*",
        "ext-pgsql": "*"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\DbWriter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DbWriter\\Tests\\": "tests/Keboola/"
        }
    },
    "scripts": {
        "tests": "phpunit",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phpstan": "phpstan analyse ./src ./tests --level=0 --no-progress",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    }
}
